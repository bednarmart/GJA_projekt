<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

    <package name="shop" namespace="/shop" extends="struts-default">
        <action name="showCart" class="net.gjashop.actions.ShoppingAction">
            <result>/shop/Cart.jsp</result>
        </action>
        <action name="addToCart" class="net.gjashop.actions.ShoppingAction">
            <result>/shop/Cart.jsp</result>
        </action>
        <action name="loadCategory" class="net.gjashop.actions.ShoppingAction" >
            <result name="success">/shop/Categories.jsp</result>
        </action>
        <action name="productDetail" class="net.gjashop.actions.ShoppingAction"  method="productDetail">
            <result name="success">/shop/productDetail.jsp</result>
        </action>
        
        <action name="loadProductTable" class="net.gjashop.actions.ProductAction" method="loadProductTable">
             <result name="success">ProductsTable.jsp</result>
        </action>
    </package>
</struts>

